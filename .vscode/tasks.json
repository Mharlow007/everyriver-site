{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Local Preview Server",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "http.server",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
